{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    {
      "source": "/chat",
      "destination": "/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://chatapp-backend-rcn0.onrender.com/api/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
